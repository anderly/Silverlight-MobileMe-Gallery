<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Class="Gallery.HomeButton"
	mc:Ignorable="d"
	d:DesignWidth="150" d:DesignHeight="30">

	<Grid x:Name="LayoutRoot">
		<Button x:Name="backButton" Width="150" Height="30" Foreground="Black" Content="{Binding Title}" BorderBrush="#FF8E8E8E" Background="Black" Click="backButton_Click" />
	</Grid>
</UserControl>